@model IEnumerable<SchoolTourProject.Models.Booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@section Image{

    <style>

        #BookingIndex {
            justify-content: center;
            
        }

        #BookingButtons a{
            margin:10px;
        }

        #BookingH1{
            font-weight:bold;
           
        }
       
        
    </style>
}

<div id="BookingIndex" class="container" style="margin-top:70px">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div id="BookingH1" class="lead">List of bookings</div>
        </div>

    </div>


    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            @*Not needed anymore redesigned webpage*@

            @*<th>
                    @Html.DisplayNameFor(model => model.SchoolName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassSize)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*Not needed anymore redesigned webpage*@

                @*<td>
                        @Html.DisplayFor(modelItem => item.SchoolName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassSize)
                    </td>*@
                <td id="BookingButtons">
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookingID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.BookingID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookingID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>

</div>

