@model SchoolTourProject.Models.Activity

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@section Image{

    <style>

        #BookingDetails {
            justify-content: center;
           
            
        }

        #BookingH1 {
            font-weight: bold;
        }
       
    </style>
}




<div id="BookingDetails" class="container" style="margin-top:70px">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div id="BookingH1" class="lead">Are you sure you want to delete this?</div>
        </div>

    </div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ActivityName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ActivityName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            @*Not working below*@
            @*@Html.DisplayFor(model => model.Image)*@

            @*Change from item to model*@

            @if (Model.Image != null)
            {
                var imageAsBase64String = Convert.ToBase64String(Model.Image);
                var imageAsGif = string.Format($"data:image/gif;base64,{imageAsBase64String}");
                <img src="@imageAsGif" class="rounded-circle" style="max-width:100px; max-height:100px" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Booking.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Booking.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn btn-danger" /> 
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
